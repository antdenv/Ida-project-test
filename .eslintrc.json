{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-console": "off",
        "quotes": [
            "error",
            "single"
        ],
        "linebreak-style": 0,
        "vue/multi-word-component-names": ["error", {
            "ignores": ["Button", "Form", "Input", "Products", "Select"]
        }]
    }
}
